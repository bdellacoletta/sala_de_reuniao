<div class="container">
  <div class="text-center mt-5">
    <h2>Reserva da Sala de Reunião</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "m-2" },
                    label: "E-mail" %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "m-2" },
                    label: "Senha" %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Entrar", class: "btn btn-primary mt-4" %>
      </div>
    <% end %>
    <p class="mt-3">Não tem acesso? Solicite a um administrador.</p>

    <%= render "devise/shared/links" %>
  </div>
</div>
